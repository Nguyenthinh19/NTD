<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#ffff">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_reject_candidate_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/item_reject_candidate_action3"
                android:background="#dc3a4c"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_reject_candidate_imgaction3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/item_reject_candidate_txtaction3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_reject_candidate_action2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#ffd200"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/item_reject_candidate_imgaction2"/>
                <TextView
                    android:id="@+id/item_reject_candidate_txtaction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_reject_candidate_action1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#1e8bc3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/item_reject_candidate_imgaction1"/>
                <TextView
                    android:id="@+id/item_reject_candidate_txtaction1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_reject_candidate_action4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#045400"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/item_reject_candidate_imgaction4"/>
            <TextView
                android:id="@+id/item_reject_candidate_txtaction4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_reject_candidateLeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/item_reject_candidateLeftLayout2"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/space_10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_menu_bar"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_reject_candidateLeftLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/item_reject_candidateLeftLayout2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/reject_candidate_avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@color/main_blue"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/reject_candidate_avatar"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reject_candidate_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="#1e8bc3"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/reject_candidate_jobhistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#888888"
                        android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/reject_candidate_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/reject_candidate_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="2"
                        android:textColor="#888888"
                        android:textSize="12sp"/>
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="#c3c3c3"/>


        </RelativeLayout>



    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>