<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lovecandidate.LoveCandidateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/love_candidate_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1e8bc3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/love_candidate_btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_white_black_24dp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/love_candidate_txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/love_candidate_btnBack"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="DS ứng viên đã lưu"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/love_candidate_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>