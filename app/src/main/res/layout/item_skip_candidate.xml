<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#ffff">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_skip_candidate_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_skip_candidate_action3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#dc3a4c"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_skip_candidate_imgaction3"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/item_skip_candidate_txtaction3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="#ffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_skip_candidate_action2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#ffd200"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_skip_candidate_imgaction2"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/item_skip_candidate_txtaction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_skip_candidate_action1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#1e8bc3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_skip_candidate_imgaction1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/item_skip_candidate_txtaction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_skip_candidateflLeftLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/item_skip_candidateflLeftLayout2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_menu_bar"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/item_skip_candidateflLeftLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/item_skip_candidateflLeftLayout2">

                <RelativeLayout
                    android:id="@+id/skip_candidate_layout_avatar"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/skip_candidate_avatar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:src="@color/main_blue"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/space_5dp"
                    android:layout_marginLeft="@dimen/space_5dp"
                    android:layout_marginRight="@dimen/space_5dp"
                    android:layout_marginTop="@dimen/space_5dp"
                    android:layout_toRightOf="@id/skip_candidate_layout_avatar"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/skip_candidate_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="#1e8bc3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/skip_candidate_jobhistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/skip_candidate_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/skip_candidate_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="2"
                            android:textColor="#888888"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:src="#c3c3c3" />


        </RelativeLayout>

    </com.daimajia.swipe.SwipeLayout>


</LinearLayout>
